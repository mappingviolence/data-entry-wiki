<?xml version="1.0" encoding="UTF-8"?>
<!-- 
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
 -->
<web-app 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

  <display-name>Mapping Violence Data Entry Wiki</display-name>
  
  <servlet>
  	<servlet-name>pool</servlet-name>
  	<servlet-class>org.mappingviolence.servlet.PoolServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>pool</servlet-name>
  	<url-pattern>/pool</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>wikipage</servlet-name>
    <servlet-class>org.mappingviolence.servlet.WikiPageServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>wikipage</servlet-name>
    <url-pattern>/wikipage</url-pattern>
  </servlet-mapping>

    <servlet>
    <servlet-name>dashboard</servlet-name>
    <servlet-class>org.mappingviolence.servlet.DashboardServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>dashboard</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>admin</servlet-name>
  	<servlet-class>org.mappingviolence.servlet.UpdateUserPermissionsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>admin</servlet-name>
  	<url-pattern>/admin</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>random</servlet-name>
  	<servlet-class>org.mappingviolence.servlet.ajax.RandomUUID</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>random</servlet-name>
  	<url-pattern>/random</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>date</servlet-name>
  	<servlet-class>org.mappingviolence.servlet.ajax.ValidDate</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>date</servlet-name>
  	<url-pattern>/isValidDate</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>comment</servlet-name>
  	<servlet-class>org.mappingviolence.servlet.ajax.CommentServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>comment</servlet-name>
  	<url-pattern>/comment</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>security</filter-name>
  	<filter-class>org.mappingviolence.security.SecurityFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>security</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <jsp-config>
    <taglib>
      <taglib-uri>/WEB-INF/tags/customTagLibrary</taglib-uri>
      <taglib-location>/WEB-INF/tags/customTagLibrary.tld</taglib-location>
    </taglib>
  </jsp-config>
  
</web-app>
